  <div class="section-cover">
   <%= image_tag("orders-cover-photo.jpg", :alt => "Orders Cover Photo", :class => "section-cover-image img-responsive") %>
    <h1>
      <%= current_user.full_name %>
    </h1>
  </div>

  <div class="container">
    <div class="page-header">
      <h3>Your Account</h3>
    </div>
    <p class="name"><%= current_user.full_name %></p>
    <p class="email"><%= current_user.email %></p>

    <div class="page-header">
      <h3>Order History</h3>
    </div>
    <div class="table-responsive">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>Order Completed on</th>
            <th>Order #</th>
            <th>Product(s)</th>
            <th>Leema Seller(s)</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <th><%= order.completed_at %></th>
              <th><%= order.number %></th>
              <th>
                <% order.shipments.each do |shipment| %>
                  <% shipment.line_items.each do |item| %>
                    <%= item.name %><br>
                  <% end %>
                <% end %>
              </th>
              <th>
                <% order.suppliers.each do |supplier| %>
                  <%= supplier.name %><br>
                <% end %>
              <th>


              </th>
              <th><%= order.total %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <!-- Shipments Table -->
    <div class="page-header">
      <h3>Shipments</h3>
    </div>
    <div class="table-responsive">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>Date Completed</th>
            <th>Order #</th>
            <th>Total Paid</th>
            <th>Leema Seller(s)</th>
            <th>Shipment Cost</th>
            <th>Tracking</th>
            <th>State</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <% order.shipments.each do |shipment| %>
              <tr>
                <th><%= shipment.created_at %></th>
                <th><% shipment.line_items.each do |item| %><%= item.name %><br> <% end %></th>
                <th><%= shipment.order.number %></th>
                <th><%= shipment.tracking %></th>
                <th><%= shipment.supplier.name %></th>
                <th><%= shipment.supplier.name %></th>
                <th><%= shipment.supplier.name %></th>
              </tr>



