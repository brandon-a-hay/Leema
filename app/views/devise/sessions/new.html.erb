<div class="sign-in-reg">
  <div class="container form">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3 col-xs-12">
        <div class="form-header logo-inverse">
          <a href="/"><%= image_tag "leema-logo-white.png", class: 'img-responsive signin-logo' %></a>
        </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'well'}) do |f| %>
        <%= devise_error_messages! %>
        <fieldset>
          <legend>
            <h2>Log in</h2>
          </legend>
          <%= bootstrap_flash %>
          <div class="facebook-login">
              <%= link_to user_omniauth_authorize_path(:facebook) do %>
                <i class="fa fa-facebook"></i> Sign in with Facebook
              <% end %>
          </div>

          <hr>

          <div class="form-group">
            <div><%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, class: 'form-control input_wide' %></div>
          </div>
          <div class="form-group">
            <div><%= f.label :password %><br />
              <%= f.password_field :password, autocomplete: "off", class: 'form-control input_wide' %></div>
          </div>

          <% if devise_mapping.rememberable? -%>

            <div class="checkbox">

              <%= f.label :remember_me do %>
                <%= f.check_box :remember_me %>Remember me
              <% end %>

            </div>
          <% end -%>

          <div><%= f.submit "Log in", :class => "btn btn-primary" %></div>

          <hr>

          <div class="text-center">
            <%= render "devise/shared/links" %>
          </div>
        </fieldset>

        <% end %>
      </div><!-- close col -->
    </div><!-- close row -->
  </div><!-- close container -->
</div>