<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @promotion } %>
<div class="row">
  <div id="general_fields">
    <div class="col-sm-3">
      <%= f.field_container :name do %>
        <div class="form-group">
          <%= f.label :promo_name %>
          <%= f.text_field :name, :class => 'form-control' %>
        </div>
      <% end %>

      <%= f.field_container :code do %>
        <div class="form-group">
          <%= f.label :promo_code %>
          <%= f.text_field :code, :class => 'form-control' %>
        </div>
      <% end %>

      <%= f.field_container :path do %>
        <div class="form-group">
          <%= f.label :path %>
          <%= f.text_field :path, :class => 'form-control' %>
        </div>
      <% end %>

      <%= f.field_container :advertise do %>
        <div class="checkbox">
          <%= f.label :advertise do %>
            <%= f.check_box :advertise %> Advertise
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="col-sm-6">
      <%= f.field_container :description do %>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, :rows => 7, :class => 'form-control' %>
        </div>
      <% end %>
    </div>
  </div>

  <div id="expiry_fields" class="col-sm-3">
    <%= f.field_container :usage_limit do %>
      <div class="form-group">
        <%= f.label :usage_limit %>
        <%= f.number_field :usage_limit, :min => 0, :class => 'fullwidth' %>
        <span class="info">
          <%= Spree.t(:current_promotion_usage, :count => @promotion.credits_count) %>
        </span>
      </div>
    <% end %>

    <div id="starts_at_field">
      <div class="form-group">
        <%= f.label :starts_at %>
        <%= f.text_field :starts_at, :value => datepicker_field_value(@promotion.starts_at), :class => 'datepicker datepicker-from fullwidth' %>
      </div>
    </div>

    <div id="expires_at_field">
      <div class="form-group">
        <%= f.label :expires_at %>
        <%= f.text_field :expires_at, :value => datepicker_field_value(@promotion.expires_at), :class => 'datepicker datepicker-to fullwidth' %>
      </div>
    </div>
  </div>
</div>
