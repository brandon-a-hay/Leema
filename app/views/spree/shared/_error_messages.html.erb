<% if target && target.errors.any? %>
  <div id="errorExplanation" class="errorExplanation alert alert-danger" data-hook>
    <h5><%= Spree.t(:please_correct_the_following_errors, :count => target.errors.count) %>:</h5>
    <p><strong><%= Spree.t(:there_were_problems_with_the_following_fields) %>:</strong></p>
     <ul>
     <% target.errors.full_messages.each do |msg| %>
       <li><%= msg %></li>
     <% end %>
     </ul>
  </div>
<% end %>
